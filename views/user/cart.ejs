				success: function (data) {
					if(data.success) {
						$(`#product-total-price-${cartId}`).text(data.total);
						$(`#quantity_${cartId}`).text(data?.quantity);
						setSubtotal();

					} else if(data.success==false) {
						if(data.maxQuantity) {
							Toastify({
