    <div class="col-sm-12 col-xl-6 container-fluid mt-5">
        <form action="/update_product/<%= prod._id %>" method="post" enctype="multipart/form-data">

            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Update Product</h6>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control"  name="name" value="<%= prod.name %>" id="floatingInput"
                        placeholder="text">
                    <label for="floatingInput">Product Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="number" name="price" class="form-control" value="<%= prod.price %>" id="floatingPassword" placeholder="number">
                    <label for="floatingPassword">Price</label>
                </div>
                <div class="form-floating mb-3">
                    <select class="form-select" name="category" id="floatingSelect" aria-label="Floating label select example">
                      <% if (category && category.length > 0) { %>
                        <% category.forEach(product => { %>
                          <option value="<%= product.category %>">
                            <%= product.category %>
                          </option> 
                        <% }); %>
                      <% } else { %>
                        <option value="">No categories found</option>
                      <% } %>
                    </select>
                    <label for="floatingSelect">Category</label>
                  </div>
                <div class="form-floating mb-3">
                    <input type="text" name="description" class="form-control" value="<%= prod.description %>" id="floatingPassword" placeholder="description">
                    <label for="floatingPassword">Description</label>
                </div>
                <div class="mt-2">
                    <label for="formFileLg" class="form-label">Select Image</label>
                    <input class="form-control form-control-lg bg-dark"  id="formFileLg" type="file" multiple name="photo" onchange="viewImage(event)">
                    <img class="mt-2 ms-1" src="/<%= prod.photo %>" width="100px;" alt="" id="imgView">
                </div>
                <button type="submit" value="submit" class="btn btn-success mt-4">Update Product</button>
            </div> 
        </form>
